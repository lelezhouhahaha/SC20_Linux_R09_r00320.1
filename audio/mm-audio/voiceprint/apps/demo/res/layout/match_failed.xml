<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/error_color"
        tools:context="com.qualcomm.qti.biometrics.voiceprint.voiceprintdemo.ui.MatchFailActivity">

        <fragment
            android:id="@+id/micFragment"
            android:name="com.qualcomm.qti.biometrics.voiceprint.voiceprintdemo.ui.MicFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/mic_fragment"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detailView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_gravity="bottom"
        android:layout_weight="1.25"
        android:background="@color/accent"
        android:gravity="center_vertical"
        android:orientation="horizontal">


    </RelativeLayout>
</LinearLayout>
