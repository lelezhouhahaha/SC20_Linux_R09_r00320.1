# emac module init.d script to insert/remove emac module

DUMP_TO_KMSG=/dev/kmsg
MODULE_BASE=/usr/lib/modules/`uname -r`/kernel/drivers/net

set -e

case "$1" in
    start)
        echo -n "emac start " > $DUMP_TO_KMSG
        insmod $MODULE_BASE/phy/at803x.ko
        insmod $MODULE_BASE/phy/qca8337.ko
        insmod $MODULE_BASE/phy/quectel_phy.ko
        insmod $MODULE_BASE/ethernet/qualcomm/emac/qcom_emac.ko
        ifconfig eth0 down
        echo 1 > /proc/sys/net/ipv4/conf/eth0/arp_ignore
        echo on > /sys/class/net/eth0/device/power/control
        echo "arp_ignore is set" > $DUMP_TO_KMSG
        ifconfig eth0 hw ether 00:80:48:BA:d1:30
        ifconfig eth0 up
        echo "done"
        ;;
    stop)
        echo -n "emac remove module" > $DUMP_TO_KMSG
        rmmod qcom_emac
        rmmod quectel_phy
        rmmod qca8337
        rmmod at803x
        echo "done"
        ;;
    restart)
        $0 stop
        $0 start
        ;;
    *)
        echo "Usage emac { start | stop | restart}" > $DUMP_TO_KMSG
        exit 1
        ;;
esac

exit 0
