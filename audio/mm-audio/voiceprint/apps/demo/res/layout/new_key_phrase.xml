<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
              style="@style/VPFont.Big">

    <Button
        android:id="@+id/browse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/card_button"

        android:drawableTop="@drawable/ic_action_search"
        android:text="@string/browse_phrases"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        style="@style/VPFont.Big"/>
    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/card_button"

        android:drawableTop="@drawable/ic_action_edit"
        android:text="@string/create_your_own"
        style="@style/VPFont.Big"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
