<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_theme_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/command"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content" android:textColor="@color/light_text_color"
                android:layout_height="wrap_content"

                android:text="@string/register_phrase_hint"
                android:textSize="40dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7" android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/icon_tips"/>

            <TextView android:layout_margin="@dimen/activity_vertical_margin"
                android:id="@+id/textView6"
                style="@style/VPFont.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_phrase_hint_details"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
