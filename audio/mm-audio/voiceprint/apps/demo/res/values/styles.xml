<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>



    <!-- ActionBar styling -->
    <style name="VPActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_theme_color</item>
    </style>

    <!-- inherit from the material Application theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Main theme colors -->
        <!-- color for the app bar -->
        <item name="android:colorPrimary">@color/primary_theme_color</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_theme_color_dark</item>

        <!--   theme UI controls  -->
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:actionBarStyle">@style/VPActionBar</item>

        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>



    <style name="VPFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="VPFont.Green">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="VPFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="VPFont.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="VPFont.Font10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="VPFont.Font17">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VPFont.Font24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="VPFont.Font16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VPFont.Font18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="VPFont.Font20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="VPFont.Big">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="VPFont.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="VPFont.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VPFont.Medium.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="VPFont.Small.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="VPFont.Small.Green">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="VPFont.Small.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="VPFont.Medium.Green">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="VPFont.Medium.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="VPFont.Big.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="VPFont.Big.Green">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="VPFont.Big.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="VPFont.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VPFont.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VPFont.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VPFont.Big.Italics">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="VPFont.Medium.Italics">
