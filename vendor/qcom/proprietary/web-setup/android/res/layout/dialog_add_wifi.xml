<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/custom_dialog_add_wifi_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		android:layout_marginBottom="@dimen/vertical_margin"
		android:layout_marginTop="@dimen/vertical_margin"
		android:text="@string/add_wifi_network"
		style="@style/CustomDialogTitle"/>

	<TextView
		android:id="@+id/custom_dialog_add_wifi_ssid_header"
		style="@style/CustomDialogText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		android:layout_marginTop="@dimen/vertical_margin"
		android:text="@string/network_ssid"/>

	<EditText
		android:id="@+id/custom_dialog_add_wifi_ssid_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		android:hint="@string/enter_ssid"
		style="@style/CustomDialogEditText"
		android:theme="@style/CustomDialogEditText">
	</EditText>

	<TextView
		android:id="@+id/custom_dialog_add_wifi_security_header"
		style="@style/CustomDialogText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginTop="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		android:text="@string/security"/>

	<Spinner
		android:id="@+id/custom_dialog_add_wifi_security_spinner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin">
	</Spinner>

	<TextView
		android:id="@+id/custom_dialog_add_wifi_password_header"
		style="@style/CustomDialogText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginTop="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		android:text="@string/network_password"/>

	<EditText
		android:id="@+id/custom_dialog_add_wifi_password_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/dialog_edit_text_side_margin"
		android:layout_marginRight="@dimen/dialog_edit_text_side_margin"
		style="@style/CustomDialogEditText"
		android:hint="@string/enter_password"
		android:theme="@style/CustomDialogEditText"/>

	<CheckBox
		android:theme="@style/CheckBoxStyle"
		android:id="@+id/custom_dialog_add_wifi_checkbox"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/dialog_edit_text_side_margin"
		android:paddingLeft="@dimen/dialog_edit_text_checkbox_padding"
		style="@style/CustomDialogPasswordCheckbox"
		android:visibility="visible"/>
</LinearLayout>